{{# equal this.size "small" }}

.responsive-image.small-img
	{{# responsive_image this.src }}
	%img.imgix-fluid{'data-src': '/assets/projects/{{ src }}?fit=crop&q=85', 'width': '{{ width }}', 'height': '{{ height }}', 'src': '/assets/1by1.png'}
	{{/ responsive_image }}

{{ else }}

.responsive-image
	{{# responsive_image this.src }}
	%img.imgix-fluid{'data-src': '/assets/projects/{{ src }}?fit=crop&q=80', 'width': '{{ width }}', 'height': '{{ height }}', 'src': '/assets/1by1.png'}
	{{/ responsive_image }}

{{/ equal }}